{
  "name": "eco-auto-backend",
  "version": "1.0.0",
  "description": "Backend API for Eco-Auto App - Employee Management System",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "setup": "node setup-mongodb.js",
    "seed": "node -e \"require('./utils/seedData').seedAllData().then(() => process.exit(0)).catch(() => process.exit(1))\"",
